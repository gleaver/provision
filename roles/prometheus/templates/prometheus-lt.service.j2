[Unit]
Description=Prometheus (long term)

[Service]
ExecStart=/usr/local/bin/prometheus \
  --config.file=/etc/prometheus/config-lt.yml \
  --storage.tsdb.path=/var/local/prometheus/data-lt \
  --storage.tsdb.retention=365d \
  --web.listen-address=localhost:9091 \
  --web.external-url=http://192.168.0.103/prometheus-lt/
Restart=always

[Install]
WantedBy=multi-user.target

