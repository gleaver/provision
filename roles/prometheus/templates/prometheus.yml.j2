global:
  scrape_interval: 10s

rule_files:
- /etc/prometheus/rules.yml

scrape_configs:
- job_name: 'persephone'
  scrape_interval: 5s
  static_configs:
  - targets: ['192.168.0.101:80']
- job_name: 'tethys'
  scrape_interval: 5s
  static_configs:
  - targets: ['192.168.0.102:80']
- job_name: 'calliope'
  scrape_interval: 5s
  static_configs:
  - targets: ['192.168.0.104:80']
- job_name: 'polyhymnia'
  scrape_interval: 5s
  static_configs:
  - targets: ['192.168.0.105:80']

